    /*
    *Onde eu travei?
    *1: Lembrando das configurações necessárias do arquivo de configuração do debbuger
    R: restart = true, console: omtegrated Termina
    */
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal"
        }
    ]
}